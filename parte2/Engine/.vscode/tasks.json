{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-I/opt/homebrew/include",
                "-I/System/Library/Frameworks/OpenGL.framework/Headers",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/src/model.cpp",
                "${workspaceFolder}/src/transform.cpp",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/world.cpp",
                "${workspaceFolder}/src/group.cpp",
                "${workspaceFolder}/src/camera.cpp",
                "${workspaceFolder}/src/vector3.cpp",
                "${workspaceFolder}/src/xmlParser.cpp",
                "${workspaceFolder}/src/pugixml.cpp",
                "-framework",
                "OpenGL",
                "-framework",
                "GLUT",
                "-o",
                "${workspaceFolder}/build/engine",
                "-Wno-deprecated-declarations"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
